@model Login
@{
    ViewData["Title"] = "Login";
}

@{
    if(ViewBag.Error != null)
    {
        <div>@ViewBag.Error</div> 
    }
}
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-md-3"></div>
        <div class="col-lg-4 col-md-6">
            <form method="post" asp-controller="Login" asp-action="Login">
                <div class="mb-3">
                    <label for="email" class="col-form-label">E-Mail Address:</label>
                    <input asp-for="UserEmail" type="text" class="form-control text-center" id="email">
                </div>
                <div class="mb-3">
                    <label for="password" class="col-form-label">Password:</label>
                    <input asp-for="Password" type="password" class="form-control text-center" id="password">
                </div>
                <div class="mb-3">
                    <div class="row">
                        <div class="col-6">
                            <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="remember">
                            <label for="remember" class="form-check-label">Remember Me</label>
                        </div>
                        <div class="col-6 d-flex justify-content-end">
                            <a asp-area="" asp-controller="User" asp-action="ResetPassword">Forgot Password</a>
                        </div>
                    </div>
                </div>
                <button style="float:right;" type="submit" class="btn btn-primary">Login</button>
                <a style="float:right;margin-right:5px;margin-bottom:20px;" class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="CreateUser">Create Account</a>
            </form>
        </div>
        <div class="col-lg-4 col-md-3"></div>
    </div>
</div>
